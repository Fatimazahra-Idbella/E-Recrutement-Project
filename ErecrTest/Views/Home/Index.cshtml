        .cards-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            padding: 20px;
            max-width: 1200px;
            margin: auto;
            flex-wrap: wrap;
        }

        .card {
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 300px;
            padding: 20px;
        }

            .card img {
                width: 100%;
                height: auto;
                border-radius: 8px 8px 0 0;
            }

            .card h2 {
                color: darkslateblue;
                margin: 15px 0;
            }

            .card p {
                color: #555;
                line-height: 1.6;
