@model IEnumerable<ErecrTest.Models.Offre>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Espace Offre</title>
    <!-- Header Section -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">Espace Offre</h1>
        <p class="text-muted">
            This section is accessible to everyone and displays all available offers. An offer includes:
            <strong>id, recruiter id, contract type (CDD, CDI), sector, profile (Deug, Licence, Master, Engineer, etc.), position, salary, etc.</strong>
        </p>
        <!-- Search Section -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title text-secondary">Search Offers</h5>
                <div >
                    <a href="/Offres/Listeoffres" class="btn btn-primary">Search Offers</a>
                </div>

            </div>
        </div>
    </div>
    
    <hr>
    <div class="text-center my-4">
        <h1 class="display-4">Welcome to the Job Offers Management</h1>
        <p class="lead">Manage job offers, review applications, and recruit the best candidates for your company.</p>

        <a asp-action="Create" class="btn btn-primary btn-lg">Post a New Job</a>
    </div>

</head>
<table class="table">
    <thead>
        <tr class="table-primary">
            <th>@Html.DisplayNameFor(model => model.TypeContrat)</th>
            <th>@Html.DisplayNameFor(model => model.Secteur)</th>
            <th>@Html.DisplayNameFor(model => model.Profil)</th>
            <th>@Html.DisplayNameFor(model => model.Poste)</th>
            <th>@Html.DisplayNameFor(model => model.Remuneration)</th>
            <th>@Html.DisplayNameFor(model => model.Recruteur.Nom)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.TypeContrat)</td>
                <td>@Html.DisplayFor(modelItem => item.Secteur)</td>
                <td>@Html.DisplayFor(modelItem => item.Profil)</td>
                <td>@Html.DisplayFor(modelItem => item.Poste)</td>
                <td>@Html.DisplayFor(modelItem => item.Remuneration)</td>
                <td>@Html.DisplayFor(modelItem => item.Recruteur.Nom)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OffreId" class="btn btn-success btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.OffreId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.OffreId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<body class="bg-light">
    <div class="container my-5">
        
        <hr>
        

        <!-- Offers List Section -->
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title text-secondary">Available Offers</h5>
                <table class="table table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>ID</th>
                            <th>Recruiter ID</th>
                            <th>Contract Type</th>
                            <th>Sector</th>
                            <th>Profile</th>
                            <th>Position</th>
                            <th>Salary</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Sample Data -->
                        <tr>
                            <td>1</td>
