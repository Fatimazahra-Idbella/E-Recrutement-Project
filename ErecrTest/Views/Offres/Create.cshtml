@model ErecrTest.Models.Offre

@{
    ViewData["Title"] = "Create";
}



<h1>Offre</h1>
<hr />
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Espace Offre</title>
    
</head>
<body class="bg-light">
    <div class="container my-5">
        <!-- Header Section -->
        <div class="text-center mb-5">
            <h1 class="fw-bold text-primary">Espace Offre</h1>
            <p class="text-muted">
                This section is accessible to everyone and displays all available offers. An offer includes:
                <strong>id, recruiter id, contract type (CDD, CDI), sector, profile (Deug, Licence, Master, Engineer, etc.), position, salary, etc.</strong>
            </p>
            <p class="text-muted">
                It also allows multi-criteria search for offers (by sector, profile, salary, etc.).
            </p>
        </div>

        <!-- Search Section -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title text-secondary">Search Offers</h5>
                <form method="GET" action="/Offres/Search">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label for="sector" class="form-label">Sector</label>
                            <input type="text" class="form-control" id="sector" name="sector" placeholder="Enter sector">
                        </div>
                        <div class="col-md-4">
                            <label for="profile" class="form-label">Profile</label>
                            <select class="form-select" id="profile" name="profile">
                                <option value="">Select profile</option>
                                <option value="Deug">Deug</option>
                                <option value="Licence">Licence</option>
                                <option value="Master">Master</option>
                                <option value="Engineer">Engineer</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="salary" class="form-label">Salary (Max)</label>
                            <input type="number" class="form-control" id="salary" name="salary" placeholder="Enter max salary">
                        </div>
                    </div>
                    <div class="text-end mt-3">
                        <button type="submit" class="btn btn-primary">Search</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Offers List Section -->
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title text-secondary">Available Offers</h5>
                <table class="table table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>ID</th>
                            <th>Recruiter ID</th>
                            <th>Contract Type</th>
                            <th>Sector</th>
                            <th>Profile</th>
                            <th>Position</th>
                            <th>Salary</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Sample Data -->
                        <tr>
                            <td>1</td>
                            <td>101</td>
                            <td>CDI</td>
                            <td>IT</td>
                            <td>Engineer</td>
                            <td>Software Developer</td>
                            <td>$50,000</td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>102</td>
                            <td>CDD</td>
                            <td>Finance</td>
                            <td>Master</td>
                            <td>Financial Analyst</td>
                            <td>$40,000</td>
                        </tr>
                        <!-- Dynamic rows should be generated here -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
