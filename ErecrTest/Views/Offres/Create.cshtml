@model ErecrTest.Models.Offre

@{
    ViewData["Title"] = "Create Job Offer";
}

<h2>Create a New Job Offer</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>
    <div class="form-group">
        
    </div>
    <div class="form-group">
        <label asp-for="TypeContrat" class="control-label">Contract Type</label>
        <input asp-for="TypeContrat" class="form-control" />
        <span asp-validation-for="TypeContrat" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Secteur" class="control-label">Sector</label>
        <input asp-for="Secteur" class="form-control" />
        <span asp-validation-for="Secteur" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Profil" class="control-label">Profile</label>
        <input asp-for="Profil" class="form-control" />
        <span asp-validation-for="Profil" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Poste" class="control-label">Position</label>
        <input asp-for="Poste" class="form-control" />
        <span asp-validation-for="Poste" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Remuneration" class="control-label">Salary</label>
        <input asp-for="Remuneration" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Remuneration" class="text-danger"></span>
    </div>

	

    <div class="d-grid">
        <button type="submit" class="btn btn-success fw-bold">
            <i class="fas fa-check-circle me-2"></i>Create Offre
        </button>
    </div>
    
</form>
<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
        <i class="fas fa-arrow-left me-2"></i>Back to List
    </a>
</div>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
