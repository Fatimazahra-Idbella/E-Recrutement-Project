@{
}
@model RecruiterStatisticsViewModel

@{
    ViewData["Title"] = "Recruitment Statistics";
}

<div class="container mt-5">
    <h2 class="text-center text-primary">Recruitment Statistics</h2>
    <hr>

    <div class="row">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">Total Job Offers</div>
                <div class="card-body">
                    <h3 class="card-title text-center">@Model.TotalOffers</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Total Applications</div>
                <div class="card-body">
                    <h3 class="card-title text-center">@Model.TotalApplications</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-info mb-3">
                <div class="card-header">Average Applications per Offer</div>
                <div class="card-body">
                    <h3 class="card-title text-center">@Model.AverageApplicationsPerOffer.ToString("0.##")</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Recruteurs")" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</div>
